<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Plozmun\Bundle\SuluSchemaOrgBundle\Transformer\MediaTransformer">
            <argument type="service" id="sulu_media.media_manager"/>
            <argument type="service" id="request_stack"/>
            <argument>%sulu.schema_org.config.image_format%</argument>
            <tag name="sulu.schema_org.transformer" alias="media_selection"/>
            <tag name="sulu.context" context="website"/>
        </service>

        <service id="Plozmun\Bundle\SuluSchemaOrgBundle\Transformer\PageSelectionTransformer">
            <argument type="service" id="sulu_page.link_tag.page_provider"/>
            <argument type="service" id="request_stack"/>
            <tag name="sulu.schema_org.transformer" alias="page_selection"/>
            <tag name="sulu.context" context="website"/>
        </service>

        <service id="Plozmun\Bundle\SuluSchemaOrgBundle\Transformer\PageTreeRouteTransformer">
            <tag name="sulu.schema_org.transformer" alias="page_tree_route"/>
            <tag name="sulu.context" context="website"/>
        </service>

        <service id="Plozmun\Bundle\SuluSchemaOrgBundle\Transformer\SimpleTransformer">
            <tag name="sulu.schema_org.transformer" alias="simple"/>
            <tag name="sulu.context" context="website"/>
        </service>
    </services>
</container>
